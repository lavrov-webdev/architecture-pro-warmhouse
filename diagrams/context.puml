@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

title Контекст системы «Тёплый дом»

Person(user, "Пользователь", "Управляет умным домом")
Person(technician, "Техник", "Подключение и обслуживание устройств")
Person(support, "Сотрудник поддержки", "Поддержка клиентов, диагностика")

System_Boundary(platform, "Платформа «Тёплый дом»") {
    System(core, "Платформа управления", "Управление устройствами, телеметрия, автоматизация")
}

System_Ext(billing, "Система биллинга", "Обработка платежей и подписок")
System_Ext(notify, "Сервис рассылок", "E-mail/SMS/push уведомления")

Rel(user, core, "Использование (управление, сценарии)", "HTTPS")
Rel(technician, core, "Подключение/обслуживание", "HTTPS")
Rel(support, core, "Поддержка/диагностика", "HTTPS")

Rel(core, billing, "Платежи и подписки", "HTTPS/Webhooks")
Rel(core, notify, "Уведомления", "HTTPS/Webhooks")

@enduml
